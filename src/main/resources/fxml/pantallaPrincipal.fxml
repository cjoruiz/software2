<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">

    <!-- ENCABEZADO -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #1a0066; -fx-padding: 10;">
            <Label text="Universidad del Cauca" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Gestión de proyectos de Grado" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Pane HBox.hgrow="ALWAYS"/> <!-- Espaciador -->
            <Button text="Sign in" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text="Log in" style="-fx-background-color: #cc0000; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Label text="PASO A PASO:" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <HBox spacing="20" alignment="CENTER">
                <!-- Tarjeta Paso 1 -->
                <VBox style="-fx-border-color: #ccc; -fx-background-color: #f4f4f4; -fx-padding: 15; -fx-pref-width: 200; -fx-pref-height: 150;">
                    <Label text="Paso 1:" style="-fx-font-weight: bold;"/>
                    <Label text="Diligencia el formato A" wrapText="true"/>
                </VBox>

                <!-- Tarjeta Paso 2 -->
                <VBox style="-fx-border-color: #ccc; -fx-background-color: #f4f4f4; -fx-padding: 15; -fx-pref-width: 200; -fx-pref-height: 150;">
                    <Label text="Paso 2:" style="-fx-font-weight: bold;"/>
                    <Label text="Tu proyecto será aprobado o rechazado o podrá ser enviado a revisiones" wrapText="true"/>
                </VBox>

                <!-- Tarjeta Paso 3 -->
                <VBox style="-fx-border-color: #ccc; -fx-background-color: #f4f4f4; -fx-padding: 15; -fx-pref-width: 200; -fx-pref-height: 150;">
                    <Label text="Paso 3:" style="-fx-font-weight: bold;"/>
                    <Label text="blah blah blah" wrapText="true"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- PIE DE PÁGINA -->
    <bottom>
        <VBox style="-fx-background-color: #1a0066; -fx-padding: 15;" alignment="CENTER">
            <Label text="Universidad del Cauca" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <HBox spacing="15" alignment="CENTER">
                <Label text="About" style="-fx-text-fill: white;"/>
                <Label text="Authors" style="-fx-text-fill: white;"/>
                <Label text="Archive" style="-fx-text-fill: white;"/>
                <Label text="Terms and Conditions" style="-fx-text-fill: white;"/>
                <Label text="Cookie Policy" style="-fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
