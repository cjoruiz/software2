<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.unicauca.presentation.CrearProyectoController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-padding: 20px;">
            <Label text="Crear Nuevo Proyecto de Grado" styleClass="title">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Título:" minWidth="150" />
                <TextField fx:id="txtTituloP" prefWidth="300.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Modalidad:" minWidth="150" />
                <ComboBox fx:id="combModalidad" prefWidth="300.0" onAction="#handleCambioModalidad" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Director (Email):" minWidth="150" />
                <TextField fx:id="txtDirector" prefWidth="300.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Codirector (Email):" minWidth="150" />
                <TextField fx:id="txtCoodirector" prefWidth="300.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Estudiante 1 (Email):" minWidth="150" />
                <TextField fx:id="txtEstudiante1" prefWidth="300.0" />
            </HBox>

            <!-- Estudiante 2 (solo para investigación) -->
            <HBox fx:id="hboxEstudiante2" alignment="CENTER_LEFT" spacing="10.0" visible="false">
                <Label text="Estudiante 2 (Email):" minWidth="150" />
                <TextField fx:id="txtEstudiante2" prefWidth="300.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                <Label text="Objetivo General:" minWidth="150" />
                <TextArea fx:id="txtObjGeneral" prefHeight="100.0" prefWidth="300.0" wrapText="true" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                <Label text="Objetivos Específicos:" minWidth="150" />
                <TextArea fx:id="txtObjEspecifico" prefHeight="100.0" prefWidth="300.0" wrapText="true" />
            </HBox>

            <!-- Formato A -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button text="Adjuntar Formato A (PDF)" onAction="#handleAdjuntarPDF" />
                <Label fx:id="txtSelectPdf" text="Ningún archivo seleccionado" />
            </HBox>

            <!-- Carta de aceptación (solo para práctica) -->
            <HBox fx:id="hboxCartaAceptacion" alignment="CENTER_LEFT" spacing="10.0" visible="false">
                <Button text="Adjuntar Carta de Aceptación (PDF)" onAction="#handleAdjuntarCartaAceptacion" />
                <Label fx:id="txtSelectCarta" text="Ningún archivo seleccionado" />
            </HBox>

            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Enviar" onAction="#handleEnviar" styleClass="primary-button" />
                <Button text="Cancelar" onAction="#handleCancelar" styleClass="secondary-button" />
            </HBox>
        </VBox>
    </content>
</ScrollPane>