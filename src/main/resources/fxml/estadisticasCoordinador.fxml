<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.unicauca.presentation.EstadisticasCoordinadorController">
    <top>
        <VBox>
            <HBox style="-fx-background-color: #2E0870; -fx-padding: 15;">
                <Label text="Estadísticas de Proyectos" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Resumen General" style="-fx-font-size: 20; -fx-font-weight: bold;" />
            
            <GridPane hgap="20" vgap="10">
                <Label text="Total de Proyectos:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblTotalProyectos" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Proyectos Aprobados:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: green;"/>
                <Label fx:id="lblAprobados" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Proyectos por Aprobar:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: orange;"/>
                <Label fx:id="lblPorAprobar" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Proyectos Rechazados:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: red;"/>
                <Label fx:id="lblRechazados" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
            
            <Separator />
            
            <Label text="Distribución por Estados" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            <ListView fx:id="listaEstados" prefHeight="200" />
            
            <HBox spacing="10" alignment="CENTER">
                <Button text="Actualizar" onAction="#handleActualizar" style="-fx-background-color: #00cc99; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>