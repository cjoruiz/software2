<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.unicauca.presentation.RegisterController">
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #882E93; -fx-padding: 5px;">
            <Button text="X" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" 
                    onAction="#handleCerrarVentana"/>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <Label text="CREAR NUEVO USUARIO" styleClass="title">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>

            <Label text="NOMBRE" style="-fx-font-size: 12px;"/>
            <TextField fx:id="nameField" prefWidth="250.0" />

            <Label text="APELLIDO" style="-fx-font-size: 12px;"/>
            <TextField fx:id="lastNameField" prefWidth="250.0" />

            <Label text="CELULAR (Opcional)" style="-fx-font-size: 12px;"/>
            <TextField fx:id="phoneField" prefWidth="250.0" />

            <Label text="PROGRAMA" style="-fx-font-size: 12px;"/>
            <ComboBox fx:id="programComboBox" prefWidth="250.0" />

            <Label text="TIPO DE USUARIO" style="-fx-font-size: 12px;"/>
            <ComboBox fx:id="roleComboBox" prefWidth="250.0" />

            <Label text="EMAIL (******@unicauca.edu.co)" style="-fx-font-size: 12px;"/>
            <TextField fx:id="emailField" prefWidth="250.0" />

            <Label text="CONTRASEÑA" style="-fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" prefWidth="250.0" />

            <Label text="(mínimo 6 caracteres, 1 mayúscula, 1 número, 1 carácter especial)" 
                   style="-fx-font-size: 10px; -fx-text-fill: gray; -fx-wrap-text: true;" 
                   maxWidth="250.0" />

            <VBox spacing="10.0" alignment="CENTER">
                <Button text="REGISTRARSE" onAction="#handleRegister" styleClass="primary-button" />
                <Button text="INICIAR SESIÓN" onAction="#handleLogin" styleClass="secondary-button" />
            </VBox>
        </VBox>
    </center>
</BorderPane>